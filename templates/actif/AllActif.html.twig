{% extends 'template.html.twig' %}

{% block pageName %}
    <title>Liste des actifs</title>
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center">Liste des Actifs</h1>

        <!-- Barre de recherche -->
        <form method="get" action="{{ path('actif_s') }}" class="mb-4">
            <div class="input-group shadow-sm">
                <input type="text" name="q" class="form-control" placeholder="Rechercher par num√©ro de s√©rie..." value="{{ app.request.query.get('q') }}">
                <button class="btn btn-primary" type="submit">
                    <i class="bi bi-search"></i> Rechercher
                </button>
            </div>
        </form>

        <!-- Flash messages -->
        {% for message in app.session.flashbag.get('success') %}
            <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
        {% for message in app.session.flashbag.get('error') %}
            <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}

        <!-- Tableau des Actifs -->
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-bordered table-hover align-middle">
                <thead class="table-dark text-white">
                    <tr>
                        <th>Nom</th>
                        <th>Type</th>
                        <th>Num√©ro de S√©rie</th>
                        <th>√âtat</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for actif in actifs %}
                        <tr>
                            <td>{{ actif.nom }}</td>
                            <td>{{ actif.type }}</td>
                            <td>{{ actif.numSerie }}</td>
                            <td>
                                {% if actif.etat == 'fonctionnel' %}
                                    <span class="badge bg-success">Fonctionnel</span>
                                {% elseif actif.etat == 'en panne' %}
                                    <span class="badge bg-danger">En panne</span>
                                {% else %}
                                    <span class="badge bg-warning">Remplac√©</span>
                                {% endif %}
                            </td>
                            <td>
                                <div class="btn-group">
                                    <button class="btn btn-info btn-sm" data-bs-toggle="modal" data-bs-target="#actifDetailModal{{ actif.id }}">Voir D√©tail</button>
                                    <button type="button" class="btn btn-secondary btn-sm dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                                        <span class="visually-hidden">Toggle Dropdown</span>
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="{{ path('actif_edit', {'id': actif.id}) }}">Modifier</a></li>
                                        <li><a class="dropdown-item" href="{{ path('actif_historique', {'id': actif.id}) }}">Historique</a></li>
                                        <li>
                                            <form method="post" action="{{ path('actif_delete', {'id': actif.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer cet actif ?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ actif.id) }}">
                                                <button type="submit" class="dropdown-item text-danger">Supprimer</button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center text-muted">Aucun actif trouv√©.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <!-- Modals pour affichage des d√©tails -->
    {% for actif in actifs %}
        <div class="modal fade" id="actifDetailModal{{ actif.id }}" tabindex="-1" aria-labelledby="actifDetailModalLabel{{ actif.id }}" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="actifDetailModalLabel{{ actif.id }}">D√©tails de {{ actif.nom }}</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title text-primary">{{ actif.nom }}</h5>
                                <p><strong>Type :</strong> {{ actif.type }}</p>
                                <p><strong>Num√©ro de s√©rie :</strong> {{ actif.numSerie }}</p>
                                <p><strong>√âtat :</strong> 
                                    {% if actif.etat == 'en panne' %}
                                        <span class="badge bg-danger">‚ö† En panne</span>
                                    {% elseif actif.etat == 'fonctionnel' %}
                                        <span class="badge bg-success">‚úî Fonctionnel</span>
                                    {% else %}
                                        <span class="badge bg-warning">üîÑ Remplac√©</span>
                                    {% endif %}
                                </p>
                                <p><strong>Date d'Acquisition :</strong> {{ actif.dateAcquisation|date('d/m/Y') }}</p>
                                {% if actif.location %}
                                    <p><strong>Emplacement :</strong> {{ actif.location.Adresse }}, {{ actif.location.Batiment }}, √âtage {{ actif.location.NumEtage }}</p>
                                {% else %}
                                    <p><strong>Emplacement :</strong> Non renseign√©</p>
                                {% endif %}
                                <p><strong>Employ√© Assign√© :</strong> 
                                    {% for employer in actif.UserAssigned %}
                                        {{ employer.nom }} {{ employer.prenom }}{% if not loop.last %}, {% endif %}
                                    {% endfor %}
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}