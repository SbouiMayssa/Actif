{% extends 'template.html.twig' %}

{% block pageName %} 
<title>Actifs Archivés</title>

 {% endblock %}

{% block body %}
    <h1>Historique des Actifs Archivés</h1>

    {% if actifs is empty %}
        <p>Aucun actif archivé pour le moment.</p>
    {% else %}
        <div class="timeline">
            {% for actif in actifs %}
                <div class="timeline-item">
                    <div class="timeline-date">{{ actif.deletedAt|date('d/m/Y H:i') }}</div>
                    <div class="timeline-content">
                        <h5>{{ actif.nom }} ({{ actif.type }})</h5>
                        <p>Numéro de Série : {{ actif.numSerie }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}

    <a href="{{ path('all_actif') }}" class="btn-retour">Retour</a>

    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .timeline {
            position: relative;
            padding: 20px 0;
            margin-left: 20px;
            border-left: 3px solid #007bff;
        }
        .timeline-item {
            position: relative;
            padding: 15px;
            margin: 15px 0;
            background: #f9f9f9;
            border-radius: 8px;
            transition: transform 0.3s ease-in-out;
        }
        .timeline-item:hover {
            transform: scale(1.02);
            background: #eef4ff;
        }
        .timeline-date {
            font-weight: bold;
            color: #007bff;
            margin-bottom: 5px;
        }
        .timeline-content {
            padding-left: 10px;
        }
        .btn-retour {
            display: inline-block;
            padding: 8px 15px;
            background-color: #007bff;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            transition: background 0.3s;
        }
        .btn-retour:hover {
            background-color: #0056b3;
        }
    </style>
{% endblock %}
